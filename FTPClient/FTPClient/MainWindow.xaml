<Window x:Class="FTPClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="600" Width="800"
        Background="#F8F9FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,15"
                BorderBrush="#DEE2E6" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Server:" VerticalAlignment="Center" FontWeight="Medium" Margin="0,0,10,0"/>
                <TextBox x:Name="txtServerIP" Width="150" Height="32" Text="127.0.0.1" 
                         VerticalContentAlignment="Center" Padding="8"/>
                <Button x:Name="btnConnect" Content="Connect" Width="80" Height="32" Margin="15,0,0,0"
                        Click="btnConnect_Click" Background="#0D6EFD" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium"/>
                <Button x:Name="btnRefresh" Content="Refresh" Width="80" Height="32" Margin="10,0,0,0"
                        Click="btnRefresh_Click" IsEnabled="False" Background="#198754" 
                        Foreground="White" BorderThickness="0" FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Server Panel -->
            <Border Grid.Column="0" Background="White" CornerRadius="5" 
                    BorderBrush="#DEE2E6" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Server Header -->
                    <TextBlock Grid.Row="0" Text="Server" HorizontalAlignment="Center" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,15,0,10"/>

                    <!-- Server Navigation -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,0,15,10">
                        <TextBlock Text="Path: " VerticalAlignment="Center" FontWeight="Medium"/>
                        <TextBlock x:Name="txtCurrentServerPath" Text="/" VerticalAlignment="Center" 
                                   Background="#F8F9FA" Padding="5" Margin="5,0,10,0"/>
                        <Button x:Name="btnGoUp" Content="↑" Width="30" Height="25" 
                                Click="btnGoUp_Click" Background="#6C757D" Foreground="White" 
                                BorderThickness="0" FontSize="12"/>
                        <Button x:Name="btnCreateFolder" Content="New Folder" Width="80" Height="25" 
                                Click="btnCreateFolder_Click" Background="#17A2B8" Foreground="White" 
                                BorderThickness="0" FontSize="11" Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Server File List -->
                    <ListBox x:Name="lstServerItems" Grid.Row="2" Margin="15,0,15,15"
                                BorderThickness="1" BorderBrush="#DEE2E6" Background="#FAFBFC"
                                MouseDoubleClick="lstServerItems_MouseDoubleClick"
                                SelectionChanged="lstServerItems_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Client Panel -->
            <Border Grid.Column="2" Background="White" CornerRadius="5" 
                    BorderBrush="#DEE2E6" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Client Header -->
                    <TextBlock Grid.Row="0" Text="Client" HorizontalAlignment="Center" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,15,0,10"/>

                    <!-- Client Path Display -->
                    <StackPanel Grid.Row="1" Margin="15,0,15,10">
                        <TextBlock x:Name="txtCurrentClientPath" Text="" VerticalAlignment="Center" 
                                   Background="#F8F9FA" Padding="5" FontSize="12" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>

                    <!-- Client File List -->
                    <ListBox x:Name="lstClientItems" Grid.Row="2" Margin="15,0,15,15"
                                BorderThickness="1" BorderBrush="#DEE2E6" Background="#FAFBFC"
                                MouseDoubleClick="lstClientItems_MouseDoubleClick"
                                SelectionChanged="lstClientItems_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Icon}" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,15,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Server Actions -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDownload" Content="📥 Download" Width="100" Height="35" 
                        Click="btnDownload_Click" Background="#198754" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium" IsEnabled="False" Margin="0,0,10,0"/>
                <Button x:Name="btnDeleteServer" Content="🗑️ Delete" Width="80" Height="35" 
                        Click="btnDeleteServer_Click" Background="#DC3545" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium" IsEnabled="False"/>
            </StackPanel>

            <!-- Client Actions -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnUpload" Content="📤 Upload" Width="100" Height="35" 
                        Click="btnUpload_Click" Background="#FD7E14" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium" IsEnabled="False" Margin="0,0,10,0"/>
                <Button x:Name="btnDeleteClient" Content="🗑️ Delete" Width="80" Height="35" 
                        Click="btnDeleteClient_Click" Background="#DC3545" Foreground="White" 
                        BorderThickness="0" FontWeight="Medium" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Log Panel -->
        <Border Grid.Row="3" Background="White" CornerRadius="5" 
                BorderBrush="#DEE2E6" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Activity Log" HorizontalAlignment="Center" 
                           FontWeight="SemiBold" Margin="0,10,0,5"/>

                <ScrollViewer Grid.Row="1" Margin="10,0,10,10">
                    <TextBox x:Name="txtLog" BorderThickness="0" Background="Transparent" 
                             TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True"
                             FontFamily="Consolas" FontSize="10"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>